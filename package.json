{
  "name": "retentive-app",
  "private": true,
  "version": "0.1.1",
  "description": "A clean, Swiss design-inspired spaced repetition learning app",
  "author": "Your Name",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "cross-env NODE_ENV=development vite",
    "build": "tsc -b && vite build",
    "build:electron": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "optimize": "node scripts/optimize-build.js",
    "build:optimized": "npm run build && npm run optimize",
    "dist:optimized": "npm run build:optimized && electron-builder",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postinstall": "electron-rebuild",
    "electron:rebuild": "electron-rebuild"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.52.1",
    "@types/node-schedule": "^2.1.8",
    "electron-store": "^10.1.0",
    "lucide-react": "^0.543.0",
    "node-schedule": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1",
    "recharts": "^3.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.30.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.retentive.app",
    "productName": "Retentive",
    "icon": "logo.png",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "logo.png"
    ],
    "mac": {
      "icon": "logo.png",
      "category": "public.app-category.education",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "logo.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "logo.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
